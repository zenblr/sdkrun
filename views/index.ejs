<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Timeli SDK Runner</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/colorbox.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/sdkrunner.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Timeli</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="#" class="add-tenant">Add Tenant</a></li>
            <li><a href="#" class="add-fiddle">Add Fiddle</a></li>
          </ul>
        </div><!--/.nav-collapse -->
    </nav>

    <div class="container">
      <div class="starter-template">
        <h1 style="text-align:left;width:30%;float:left;">Timeli SDK Runner</h1>
         <div class="control">
             <label>Select Fiddle</label>
             <select class="select-fiddle">
                 <option value="0">Select Fiddle</option>
             </select>
             <label style="margin-left:20px;">Select Tenant</label>
             <select class="select-tenant">
                 <option value="0">Select Tenant</option>
             </select>
             <button class="run-button">Run</button>
         </div>
         <div id="log" style="float:left;" class="console"><p align="left"></p></div>
         <div id="fiddle-canvas" class="console hidden"></div>
      </div>
    </div><!-- /.container -->

    <div style="display:none;">
        <div class="add-tenant">
            <form id="add-tenant">
                <div style="margin-bottom:20px;">
                    <h2>Add a new Tenant</h2>
                </div>
                <label for="domain">Domain</label><input type="text" name="domain" placeholder="domain"><br>
                <label for="client">Client</label><input type="text" name="client" placeholder="client"><br>
                <label for="secret">Secret</label><input type="text" name="secret" placeholder="secret"><br>
                <label for="redirect_uri">Redirect URI</label><input type="text" name="redirect_uri" placeholder="redirect uri"><br>
                <label for="scopes">Scopes</label><input type="text" name="scopes" placeholder="scopes"><br>
                <label for="grant_type">Grant Type</label><input type="text" name="grant_type" placeholder="grant type"><br>
                <label for="username">User Name</label><input type="text" name="username" placeholder="username"><br>
                <label for="password">Password</label><input type="text" name="password" placeholder="password"><br>
                <div style="margin-top:20px">
                    <button type="submit" class="add-tenant-submit">Add</button>
                    <button class="xbutton">Cancel</button>
                </div>
            </form>
        </div>
        <div class="get">
            <input type="text" name="name" placeholder="Name of Script">
            <button class="popupget">Get</button>
            <button class="xbutton">Close</button>
        </div>
        <div class="version-reset-warn">
            <p></p>
            <button class="popupOK">OK</button>
            <button class="xbutton">Cancel</button>
        </div>
        <div class="list-of-scripts">
            <p><a class="all-scripts">List All</a></p>
            <table border="1">
                <tr>
                    <th>Name</th><th>Description</th>
                </tr>
            </table>
        </div>
        <div class="recorded-results">
            <ul>
            </ul>
        </div>
        <div>
            <form class="form-configure-tests">
                When comparing results, check array lengths are the same:
                <input type="radio" name="check_array_length" value="yes"> Yes
                <input type="radio" name="check_array_length" value="no"> No
                <div style="width:50%;margin:auto;margin-top:10px;">
                    <button type="submit" class="btn btn-primary update-test-config">Update</button>
                </div>
            </form>
        </div>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.colorbox-min.js"></script>
    <script src="https://demo.timeli.io/static/js/public/sdk.js"></script>
    <script src="/js/sdkrunner.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>
